<div class="modal-right">
  <div class="upper-part">
    <div class="chat-header">
      <h2 class="description-card">Got any comment?</h2>
      <button type="button" class="btn btn-default" data-dismiss="modal"><%= image_tag "ic-close.svg", class: "nav-icon" %></button>
    </div>

    <div id="messages-<%= card.id %>"data-card-id="<%= card.id %>" class="chat-body overflow-auto">
      <% card.comments.each do |comment| %>
        <%= render "comments/message", card: card, comment: comment, empty_comment: empty_comment %>
      <% end %>
    </div>
  </div>

  <div class="input-field chat-input-field-group">
    <%= simple_form_for [ card, empty_comment ], remote: true, class: "new_comment" do |f| %>
      <%= f.input :content, label: false, placeholder: "Enter your message here!", class: "chat-input-field" %>
      <%= f.submit "Send", class: "btn-primary btn-small btn-chat" %>
    <% end %>
  </div>

</div>
