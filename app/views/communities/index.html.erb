<div class="container">
  <div class="community-map">
    <div class="left-text">
      <% if !@community.empty? %>
        <h1 class="headline">Yay! There's a community in your house already ðŸŽ‰</h1>
        <p class="sub-header">Come, join your neighbors now!</p>
        <% if  !current_user %>
           <%= link_to "Create account", new_user_registration_path(community: @community[0]), class: "btn btn-primary btn-shadow" %>
        <% end %>
      <% else %>
         <h1 class="headline">There's no community in your house yet ðŸ˜¯</h1>
         <p class="sub-header">Start a community now!</p>
         <% if  !current_user %>
           <%= render "form", community: @empty_community %>
        <% end %>
      <% end %>
    </div>
    <div class="map-container">
      <div id="map"
        style="width: auto; height: 450px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
