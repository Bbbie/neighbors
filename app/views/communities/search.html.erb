<div class="container-search-center">
  <div class="home-container">
    <h1 class="headline">First enter your address</h1>
    <p class="sub-header">Connect with your direct neighbors and Lorem ipsum dolor sit amet, consectetur</p>
  </div>
  <div class="search-field">
    <%= form_tag communities_path, method: :get, class: "search-input" do %>
      <%= text_field_tag :query, params[:query], class: "form-control", id: "address_input", placeholder: "Enter your address" %>
      <%= submit_tag "Find community", class: "btn btn-primary btn-shadow" %>
    <% end %>
  </div>
</div>
