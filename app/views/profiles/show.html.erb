<%= link_to "go back", cards_path %>
<div class="container">
  <h1>I am <%= @profile.user.first_name %> <%= @profile.user.last_name %></h1>
  <div class="info">
    <table>
      <tr>
        <th>Where I live</th>
        <th>My number</th>
      </tr>
      <tr>
        <td><%= @profile.floor %></td>
        <td><%= @profile.phone_number %></td>
      </tr>
    </table>
    <div class="main-content">
      <%= cl_img_tag @profile.avatar.key %>
      <div class="about">
        <h4>About me</h4>
        <p><%= @profile.about %></p>
      </div>
    </div>
  </div>
</div>

<% if @profile.user == current_user %>
  <a href="#">Edit profile</a>
<% end %>

<!-- HERE EDIT FORM. TO ACTIVATE WHEN CLICK ON EDIT -->
<div class="edit-form">
  <h1>Edit your profile</h1>
  <%= render "form", profile: @profile %>
</div>
